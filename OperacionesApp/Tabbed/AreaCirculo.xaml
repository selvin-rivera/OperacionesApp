<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperacionesApp.Tabbed.AreaCirculo"
             Title="Area del Circulo">
    <VerticalStackLayout Padding="40" Spacing="10">
        <Label Text="Ingrese Primer radio: " FontAttributes="Bold" />
        <Entry x:Name="txtN1" Keyboard="Numeric" Placeholder="Ingrese Primer número radio..."/>
        <Label Text="Ingrese Segundo radio: " FontAttributes="Bold" />
        <Entry x:Name="txtN2" Keyboard="Numeric" Placeholder="Ingrese Segundo número radio..."/>
        <Label Text="Resultdo: " FontAttributes="Bold" />
        <Entry x:Name="txtResultado" IsReadOnly="True"/>
        <Button x:Name="btnCalcular" Text="Calcular" Clicked="btnCalcular_Clicked" Background="Crimson"/>
        <Button x:Name="btnLimpiar" Text="Limpiar" Clicked="btnLimpiar_Clicked" BackgroundColor="DarkGoldenrod"/>
    </VerticalStackLayout>
</ContentPage>